


<%= form_for(@pet) do |f| %>
      <div class="form-group">
        <%= f.label :recipient_name %>
        <%= f.text_field :recipient_name, required:true %>
      </div>
      <div class="form-group">
        <%= f.label :recipient_email %>
        <%= f.email_field :recipient_email, required:true %>
      </div>
      <div class="form-group">
        <%= f.label :sender_name %>
        <%= f.text_field :sender_name, required:true %>
      </div>
      <div class="form-group">
        <%= f.label :sender_email %>
        <%= f.email_field :sender_email, required:true %>
      </div>
      <div class="form-group">
        <%= f.label :message %>
        <%= f.text_field :message, required:false %>
      </div>

      <div class="form-group">
        <%= f.submit %>
      </div>

<% end %>
